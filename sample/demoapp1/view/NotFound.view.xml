<mvc:View 
    controllerName="sample.demoapp1.controller.NotFound"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc">
    <Page title="Client Search">
        <content>
        <Panel class="noBottomBorder">
            <core:Icon src="sap-icon://arrow-left" />
            <Text id="landingTip" 
                        text=" Search for a client to begin"
                        class="padLeft sapUiSmallMarginBegin"
                        />
            <f:SimpleForm>
                <f:content>
                    <core:Icon id="landingIcon" 
                        src="sap-icon://customer" 
                        size="400px"
                        color="#eeeeee" />
                </f:content>
            </f:SimpleForm>
            <f:SimpleForm>
                <f:content>
                    <Text id="landingText" 
                        text=""
                        textAlign="Center"/>
                </f:content>
            </f:SimpleForm>
            
        </Panel>
        </content>
        
    </Page>
</mvc:View>